---
const { pageTitle } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
---
<!-- Social: Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={pathname} />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:image" content="/images/social-image.png" />
<meta property="twitter:image:alt" content="Platform UI Rocket" />
<meta name="twitter:description" content="Platform UI" />
