---
import SidebarMenuItem from "./sidebar-menu-item.astro";
const allPages = await Astro.glob('../../pages/docs/*');
---
<ul class="sidebar-menu list">
    {allPages.map((item) => <SidebarMenuItem url={item.url} title={item.frontmatter.title} />)}
</ul>
